************************TASK 01*******************
CODE:
#include<iostream>
using namespace std;
class Employee{
public:
  string name;
  string jobtitle;
  double  salary;
  void displayinfo();

};

int main()
{
Employee e;
e.name="Aymen";
e.jobtitle="software engineer";
e.salary=2000000;
cout<<"e.name: "<<"e.jobtitle: "<<"e.salary: "<<endl;
	 e.displayinfo();
}

 




                               
*******************************TASK 02*************
CODE:
#include<iostream>
using namespace std;
class car{
public:
  string name;
  string topspeed;
  int modelname;
  void displayinfo();

};

int main()
{
car c;
c.name="Civic";
c.topspeed="137mph";
c.modelname=2022;
cout<<"c.name: "<<"c.topspeed: "<<"c.modelname: "<<endl;
	 c.displayinfo();
}

 




